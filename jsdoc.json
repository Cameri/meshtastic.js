{
  "tags": {
    "allowUnknownTags": false
  },
  "source": {
    "include": ["./src/", "./README.md"],
    "includePattern": "\\.ts$",
    "excludePattern": "(node_modules/|docs)"
  },
  "sourceType": "module",
  "plugins": ["plugins/markdown"],
  "opts": {
    "template": "node_modules/better-docs",
    "encoding": "utf8",
    "destination": "docs/",
    "recurse": true,
    "verbose": true
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": false
  }
}
